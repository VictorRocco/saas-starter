<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}${PROJECT_NAME}{% endblock %}</title>
    
    <!-- Bulma CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    
    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    
    <!-- Alpine.js -->
    <script defer src="https://unpkg.com/alpinejs@3.13.5/dist/cdn.min.js"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Custom CSS -->
    {% block extra_css %}{% endblock %}
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="{% url 'public:home' %}">
                ${PROJECT_NAME}
            </a>
            
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasic"
                x-data="{ open: false }"
                x-on:click="open = !open"
                x-bind:class="{ 'is-active': open }">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasic" class="navbar-menu" x-data="{ open: false }" x-bind:class="{ 'is-active': open }">
            <div class="navbar-start">
                <a class="navbar-item" href="{% url 'public:home' %}">Home</a>
                <a class="navbar-item" href="{% url 'public:about' %}">About</a>
                <a class="navbar-item" href="{% url 'public:contact' %}">Contact</a>
                
                {% if user.is_authenticated %}
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">Examples</a>
                    <div class="navbar-dropdown">
                        <a class="navbar-item" href="{% url 'public:bulma' %}">Bulma CSS</a>
                        <a class="navbar-item" href="{% url 'public:alpine' %}">Alpine.js</a>
                        <a class="navbar-item" href="{% url 'public:htmx' %}">HTMX</a>
                    </div>
                </div>
                {% endif %}
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        {% if user.is_authenticated %}
                            {% if user.is_staff %}
                            <a class="button is-light" href="{% url 'admin:dashboard' %}">
                                <span class="icon">
                                    <i class="fas fa-cog"></i>
                                </span>
                                <span>Admin</span>
                            </a>
                            {% endif %}
                            <a class="button is-primary" href="{% url 'private:dashboard' %}">
                                <span class="icon">
                                    <i class="fas fa-user"></i>
                                </span>
                                <span>Dashboard</span>
                            </a>
                            <a class="button is-light" href="{% url 'users:logout' %}">
                                <span class="icon">
                                    <i class="fas fa-sign-out-alt"></i>
                                </span>
                                <span>Logout</span>
                            </a>
                        {% else %}
                            <a class="button is-primary" href="{% url 'users:register' %}">
                                <strong>Sign up</strong>
                            </a>
                            <a class="button is-light" href="{% url 'users:login' %}">
                                Log in
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Messages -->
    {% if messages %}
    <div class="container mt-3">
        {% for message in messages %}
        <div class="notification is-{{ message.tags }}">
            <button class="delete"></button>
            {{ message }}
        </div>
        {% endfor %}
    </div>
    {% endif %}

    <!-- Main Content -->
    <main class="section">
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong>${PROJECT_NAME}</strong> by <a href="https://github.com/yourusername">Your Name</a>.
                Built with Django, HTMX, Alpine.js and Bulma.
            </p>
        </div>
    </footer>

    <!-- Custom JavaScript -->
    {% block extra_js %}{% endblock %}

    <!-- Message Handling -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                const $notification = $delete.parentNode;
                $delete.addEventListener('click', () => {
                    $notification.parentNode.removeChild($notification);
                });
            });
        });
    </script>
</body>
</html> 